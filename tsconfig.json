{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "env.d.ts",
        "resources/js/*",
        "resources/js/**/{*.js,*.ts,*.vue}",
        "resources/js/bootstrap.js"
    ],
    "compilerOptions": {
        "lib": ["ES2020", "DOM"],
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./resources/js/*"]
        },
        "allowJs": true,
        "verbatimModuleSyntax": true
    },
    "exclude": ["node_modules", "dist"],
    "references": [
        {
            "path": "./tsconfig.config.json"
        }
    ] 
}
